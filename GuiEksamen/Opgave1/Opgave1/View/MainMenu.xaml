<Page x:Class="Opgave1.View.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Opgave1.View"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="500"
      Title="MainMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Image Source="../TitlePicture.png" Grid.Row="0" Margin="0,0,0,0"></Image>

        <Border CornerRadius="8" Padding="10,10,10,10" Width="auto" Margin="50,50,50,50" Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
           
            <Button Margin="5" Content="Buy Menu" Name="BuyMenuButton" Click="BuyMenuButton_Click"></Button>
            <Button Margin="5" Content="Product Management" Name="ProductMenuButton" Click="ProductMenuButton_Click"></Button>
                <Button Margin="5" Content="Exit" Name="ExitButton" Click="ExitButton_Click"></Button>
            
        </StackPanel>
        </Border>
    </Grid>
    
</Page>
